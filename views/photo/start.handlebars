<header class="page-header">
  <h1>Photos Index</h1>
  <a href="/new"><button class="btn btn-primary">+ New Photo</button></a>
</header>




  <div class="row">
    {{#if photos }}
    {{#each photos as |photo| }}
      <div class="col-xs-4">
        <a
          href="/photos/{{ photo.name }}?_method=delete"
          class="text-danger">
          &times;
        </a>
        <p>{{ photo.name }}</p>
        <img src="{{ photo.url }}" alt="Photo" class="img-responsive">
      </div>
    {{/each }}
    {{else}}
    <div class="col-sm-10 col-sm-offset-1">
      <p class="text-danger">No Photos yet</p>
    </div>
    {{/if }}
  </div>
